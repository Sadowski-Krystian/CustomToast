<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main"
        tools:context=".MainActivity">

    <Button
            android:text="toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_toast"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="67dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_custom" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.883"
            tools:visibility="visible"/>
    <Button
            android:text="custom toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_custom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="71dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_snack"/>
    <Button
            android:text="snackbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_snack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="84dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_label"/>
    <Button
            android:text="label info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="128dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lbl_error"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="80dp" app:layout_constraintBottom_toTopOf="@+id/btn_toast"
            app:layout_constraintTop_toTopOf="parent" android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>